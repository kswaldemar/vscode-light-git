{
  "name": "vscode-light-git",
  "displayName": "Light Git",
  "description": "Lightweight git tools for file comparison and remote links",
  "version": "1.0.0",
  "publisher": "kswaldemar",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "repository": {
    "type": "git",
    "url": "https://github.com/kswaldemar/vscode-light-git"
  },
  "license": "MIT",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lightGit.compareWithRevision",
        "title": "Compare with Revision",
        "category": "Light Git"
      },
      {
        "command": "lightGit.compareWithHash",
        "title": "Compare with Hash",
        "category": "Light Git"
      },
      {
        "command": "lightGit.openRemote",
        "title": "Open in Remote",
        "category": "Light Git"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "lightGit.compareWithRevision",
          "when": "!explorerResourceIsFolder",
          "group": "7_modification"
        },
        {
          "command": "lightGit.compareWithHash",
          "when": "!explorerResourceIsFolder",
          "group": "7_modification"
        },
        {
          "command": "lightGit.openRemote",
          "when": "!explorerResourceIsFolder",
          "group": "7_modification"
        }
      ],
      "editor/context": [
        {
          "command": "lightGit.compareWithRevision",
          "group": "7_modification"
        },
        {
          "command": "lightGit.compareWithHash",
          "group": "7_modification"
        },
        {
          "command": "lightGit.openRemote",
          "group": "7_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}